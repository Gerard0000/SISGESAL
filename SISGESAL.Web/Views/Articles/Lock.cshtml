@model SISGESAL.web.Data.Entities.Article

@{
    ViewData["Title"] = "Lock";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<br />
<h1>ARTÍCULO: <b class="text-purple">@Html.DisplayFor(model => model.Name)</b></h1>
<hr />
<h4 class="text-red">¿Estas Seguro de que quieres bloquear este Artículo?</h4>

<hr />
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.KindofArticle.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.KindofArticle.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Supplier.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supplier.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TradeMark.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TradeMark.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Observation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Observation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Creator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Creator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModificationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModificationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Modifier)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modifier)
            </dd>
        </dl>
        <hr />
        <div>
            <form asp-action="Lock">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Bloquear" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-dark">Regresar</a>
            </form>
        </div>
    </div>
</div>
<br />