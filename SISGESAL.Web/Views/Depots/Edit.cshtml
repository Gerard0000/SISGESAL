@model SISGESAL.web.Models.DepotViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<hr />
<h1><b>EDITAR ALMACÉN</b></h1>

<hr />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div><b><label style="color:red">@ViewBag.DuplicateMessage</label></b></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="CreationDate" />
                    <input type="hidden" asp-for="Creator" />

                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label">Departamento al que Pertenece </label>
                        <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control"></select>
                        <b><span asp-validation-for="DepartmentId" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <label asp-for="MunicipalityId" class="control-label">Municipio al que Pertenece </label>
                        <select asp-for="MunicipalityId" asp-items="Model.Municipalities" class="form-control"></select>
                        <b><span asp-validation-for="MunicipalityId" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <label asp-for="CourtId" class="control-label">Juzgado o Tribunal al que Pertenece <b style="color:red">(*)</b></label>
                        <select asp-for="CourtId" asp-items="Model.Courts" class="form-control" value=0></select>
                        <b><span asp-validation-for="CourtId" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nombre del Almacén <b style="color:red">(*)</b></label>
                        <input asp-for="Name" class="form-control" style="text-transform: uppercase" />
                        <b><span asp-validation-for="Name" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <label asp-for="Observation" class="control-label"></label>
                        <textarea asp-for="Observation" class="form-control" style="text-transform: uppercase" rows="3"></textarea>
                        <b><span asp-validation-for="Observation" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-dark">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
