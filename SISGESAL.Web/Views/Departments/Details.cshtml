@model SISGESAL.web.Data.Entities.Department

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="~/ArchivosAdminLTE/plugins/fontawesome-free/css/all.min.css">

<br />
<h1><b>DETALLES</b></h1>

<div>
    <h4><b>Departamento: </b><b class="text-red">@Html.DisplayFor(model => model.Name)</b></h4>
    <hr />
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CodDepHn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CodDepHn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Observation)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Observation)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreationDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Creator)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Creator)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ModificationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModificationDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Modifier)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Modifier)
                </dd>
            </dl>
            <div>
                <a asp-action="Index" class="btn btn-dark">Regresar</a>
            </div>
        </div>
    </div>
</div>

@if (Model.Municipalities!.Count == 0)
{
    <div class="card">
        <div class="card-body">
            <h4><b class="text-purple">NO HAY MUNICIPIOS REGISTRADOS</b></h4>
            <br>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header bg-info">
            <h5 style="text-align:center;"><b>MUNICIPIOS DEL DEPARTAMENTO @Model.Name</b></h5>
        </div>
        <div class="card-body">
            <div>
            </div>
            <br>
            <div style="text-align: center;">
                <table id="tabla" class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Municipalities!.FirstOrDefault()!.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Municipalities!.FirstOrDefault()!.CodMunHn)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Municipalities!.FirstOrDefault()!.CourtsNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Municipalities!.FirstOrDefault()!.Observation)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Municipalities)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodMunHn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CourtsNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Observation)
                                </td>
                                <td>
                                    <a href="/Municipalities/Details/@item.Id" class="btn btn-info fa fa-solid fa-list-alt" title="DETALLE Y JUZGADOS"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<hr />

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}