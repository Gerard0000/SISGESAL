@model SISGESAL.web.Models.MunicipalityViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<br />
<div class="row">
    <div class="col-lg-12">
        <p class="text-center">
            <h1 align="center"><b>AGREGAR MUNICIPIO</b></h1>
        </p>
    </div>
</div>
<hr />

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row"><label style="color:red"><b>@ViewBag.DuplicateMessage</b></label></div>

                    <input asp-for="DepartmentId" class="form-control" type=hidden />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Nombre del Municipio <b style="color:red">(*)</b></label>
                        <input asp-for="Name" class="form-control" style="text-transform: uppercase" />
                        <b><span asp-validation-for="Name" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <label asp-for="CodMunHn" class="control-label">Código del Municipio <b style="color:red">(*)</b></label>
                        <input asp-for="CodMunHn" class="form-control" onKeypress="if (event.keyCode < 48 || event.keyCode > 57) event.returnValue = false;" />
                        <b><span asp-validation-for="CodMunHn" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <label asp-for="Observation" class="control-label"></label>
                        <textarea asp-for="Observation" class="form-control" style="text-transform: uppercase" rows="3"></textarea>
                        <b><span asp-validation-for="Observation" class="text-danger"></span></b>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        <a href="/Departments/Details/@Model.DepartmentId" class="btn btn-dark" title="Regresar">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
