@model SISGESAL.web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}
<br>
<h2 class="text-center">Cambiar Contraseña</h2>
<br>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="OldPassword">Contraseña Actual</label>
                <input asp-for="OldPassword" type="password" class="form-control" />
                <b><span asp-validation-for="OldPassword" class="text-danger"></span></b>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword">Nueva Contraseña</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <b><span asp-validation-for="NewPassword" class="text-danger"></span></b>
            </div>

            <div class="form-group">
                <label asp-for="Confirm">Confirmar Contraseña</label>
                <input asp-for="Confirm" type="password" class="form-control" />
                <b><span asp-validation-for="Confirm" class="text-danger"></span></b>
            </div>

            <div class="form-group">
                <input type="submit" value="Cambiar Contraseña" class="btn btn-success col-md-8" />
                <a class="btn btn-dark col-md-3" title="Ir a Inicio" href="@Url.Action("Index","Home")">Ir a Inicio</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
