@model IEnumerable<SISGESAL.web.Data.Entities.KindofPeople>

<!-- Font Awesome Icons -->
<link rel="stylesheet" href="~/ArchivosAdminLTE/plugins/fontawesome-free/css/all.min.css">

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<br />

<div class="row">
    <div class="col-lg-12">
        <p class="text-center">
            <h1 align="center"><b>TIPO DE PERSONAS</b></h1>
        </p>
    </div>
</div>

<hr />

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 align="center">@ViewBag.Indexcount</h3>
                        <p align="center">Total de Tipos de Personas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-info">
        <h5 style="text-align:center;"><b>TIPOS DE PERSONAS</b></h5>
    </div>
    <div class="card-body" style="text-align: center;">
        <table id="tabla" class="table table-bordered table-striped" style="width:100%">
            <thead class="thead-success">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GendersNumber)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GendersNumber)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info fa fa-solid fa-list-alt" title="DETALLE Y MUNICIPIOS"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}