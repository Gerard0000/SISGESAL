@model SISGESAL.web.Data.Entities.Court

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<hr />
<h1>Juzgado o Tribunal: <b class="text-purple">@Html.DisplayFor(model => model.Name)</b></h1>

<hr />
<h4 class="text-red">¿Estas Seguro de que quieres eliminar este Juzgado o Tribunal?</h4>
<div class="row"><label style="color:red"><b>@ViewBag.ErrorDelete</b></label></div>
<hr />
<div class="card">
    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Municipality!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Municipality!.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Municipality!.Department!.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Municipality!.Department!.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Observation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Observation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Creator)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Creator)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModificationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModificationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Modifier)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Modifier)
            </dd>
        </dl>

        <hr />
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a href="/Municipalities/Details/@Model.Municipality!.Id" class="btn btn-dark" title="Regresar">Cancelar</a>
            </form>
        </div>
    </div>
</div>
<br />